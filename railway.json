{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "startCommand": "python manage.py collectstatic --noinput && python manage.py migrate && gunicorn trading_admin.wsgi:application --bind 0.0.0.0:$PORT"
  },
  "environments": {
    "production": {
      "variables": {
        "DJANGO_SETTINGS_MODULE": "trading_admin.settings_railway",
        "DEBUG": "False"
      }
    }
  }
}